<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/body_5">
        <LinearLayout
            android:id="@+id/containerPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIconStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_status_service" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/body_1">

                <TextView
                    android:id="@+id/tvVehicleService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_extra_bold"
                    android:text="@string/vehicle"
                    android:textColor="@color/blue_dark_primary"
                    android:textSize="@dimen/body_4"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/tvStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_extra_bold"
                    android:text="@string/em_andamento"
                    android:textColor="@color/blue_dark_primary"
                    android:textSize="@dimen/body_4"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIconCarStatusService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_car"
                android:layout_marginTop="@dimen/body_4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/tvModelCarStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modelo: Sedan"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/blue_light"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:id="@+id/tvCorCarStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cor: Prata"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/blue_light"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:id="@+id/tvPlacaCarStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placa: JXO-2668"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/blue_light"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:id="@+id/tvAnoCarStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ano: 2009"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/blue_light"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ListView
                android:id="@+id/lvItemList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
</layout>