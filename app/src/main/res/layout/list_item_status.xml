<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/body_5">

        <LinearLayout
            android:id="@+id/containerPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIconStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_status_service" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/body_1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVehicleService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_extra_bold"
                    android:text="Limpeza completa"
                    android:textColor="@color/blue_dark_primary"
                    android:textSize="@dimen/body_4" />

                <TextView
                    android:id="@+id/tvStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/raleway_extra_bold"
                    android:text="@string/em_andamento"
                    android:textColor="@color/blue_dark_primary"
                    android:textSize="@dimen/body_4" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIconCarStatusService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body_4"
                android:src="@drawable/ic_car" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvModelCarStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Modelo: Sedan"
                    android:textColor="@color/blue_light" />

                <TextView
                    android:id="@+id/tvCorCarStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Cor: Prata"
                    android:textColor="@color/blue_light" />

                <TextView
                    android:id="@+id/tvPlacaCarStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Placa: JXO-2668"
                    android:textColor="@color/blue_light" />

                <TextView
                    android:id="@+id/tvAnoCarStatusService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Ano: 2009"
                    android:textColor="@color/blue_light" />
            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ListView
                android:id="@+id/lvItemList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>-->

    </LinearLayout>
</layout>